MODEL=phi3:mini
# Schnelleres Embedding-Modell (falls vorhanden). Falls nicht gepullt, fallback bleibt nomic-embed-text.
EMBED_MODEL=nomic-embed-text
TOP_K=3
MAX_TOKENS=64
TEMPERATURE=0.1
CONTEXT_DOCS=1
MAX_CHUNK_CHARS=200
NUM_CTX=256

# Services 
OLLAMA_URL=http://ollama:11434
CHROMA_HOST=chroma
CHROMA_PORT=8000
COLLECTION_NAME=company-faq
DATA_DIR=/app/data

# Entfernt & erstellt Collection automatisch neu, wenn Embedding-Dimension nicht passt (z.B. Modellwechsel 768->384)
RESET_ON_DIM_MISMATCH=1
